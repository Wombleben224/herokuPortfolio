<main class="container">
  <div class="form-group">
    <form action="/contact_me" id="contact-form">

      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="john.doe@example.com"
          autocomplete="email">
        <div id="emailError" class="text-danger" style="display: none;"><i class="fas fa-times"></i> Please
          Enter A
          Valid Email Address</div>
      </div>

      <div class="form-group">
        <label for="subject">Subject</label>
        <textarea rows="1" class="form-control" name="subject" id="subject"></textarea>
        <div id="subjectError" class="text-danger" style="display: none;"><i class="fas fa-times"></i>Subject is
          required</div>
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        <textarea rows="5" class="form-control" name="message" id="message"></textarea>
        <div id="messageError" class="text-danger" style="display: none;"><i class="fas fa-times"></i>Message is
          required</div>
      </div>

      <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary mr-3"><i class="fas fa-paper-plane"></i> Send</button>
      </div>

      <h5 id="formErrorMessage" class="text-danger" style="display: none;">Invalid inputs! Please correct
        errors and resubmit</h5>
      <h5 id="formConfirmationMessage" class="text-success" style="display: none;">Thank You Very Much!</h5>

    </form>

  </div>
</main>

<script defer src="/Js/contact.js"></script>